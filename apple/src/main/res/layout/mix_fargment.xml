<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/head_layout1_beloew"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mix_image1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/mix_image2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/mix_image3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/mix_image2"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/head_layout2_beloew"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/head_layout1_beloew"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mix_image1_beloew"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/mix_image2_beloew"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/mix_image3_beloew"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/mix_image2_beloew"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>